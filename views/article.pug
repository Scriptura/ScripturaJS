extends patternLayouts

block content
  main(itemprop='mainContentOfPage')
    .section
      .wrap
        h1(itemprop='headline name').emphasized= name
        .columns
          ul.list
            li
              strong Id: 
              = id
            li
              strong Date Created: 
              = dateCreated
            li
              strong Date Modified: 
              = dateModified
            li
              strong Date Published: 
              = datePublished
            li
              strong Description: 
              = description
            li
              strong Type: 
              = type
            li
              strong Slug: 
              = slug
            li
              strong Meta Title: 
              = metaTitle
            li
              strong Meta Description: 
              = metaDescription
          ul.list
            li
              strong Description: 
              = description
            li
              strong Excerpt: 
              = excerpt
            li
              strong Author Id: 
              = authorId
            li
              strong Contributors Id: 
              = contributorsId
            li
              strong Status: 
              = status
            li
              strong Comments Status: 
              = commentsStatus
            li
              strong Comments Count: 
              = commentsCount
            li
              strong Keywords Id: 
              = keywordsId
            li
              strong Medias Id: 
              = mediasId
        p= content
