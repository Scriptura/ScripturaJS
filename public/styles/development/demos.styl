$sizeXS =   36.01rem

.demo-item
  overflow hidden
  min-height 4rem
  width 100%
  text-align center
  background-color #fff

.demo-layout [class^="m"]
.demo-layout aside
  min-height 4rem
  padding .5rem 0
  text-align center
  background-color #fff

.demo-layout2 [class^="m"]
  padding .5rem
  background-color #fff
  background-size cover
  background-position 50% 50%

@media screen and (max-width: 36.01rem)

  .demo-layout2 [class^="m"]
    background-image url('../../assets/medias/images/demos/ColorfulLeafS600.jpg')

  .demo-layout2 > :nth-child(5n+2)
    background-image url('../../assets/medias/images/demos/LotusMacroS600.jpg')

  .demo-layout2 > :nth-child(5n+3)
    background-image url('../../assets/medias/images/demos/GrassLeafS600.jpg')

  .demo-layout2 > :nth-child(5n+4)
    background-image url('../../assets/medias/images/demos/PacificCityS600.jpg')

  .demo-layout2 > :nth-child(5n+5)
    background-image url('../../assets/medias/images/demos/OldMechanismS600.jpg')

@media screen and (min-width: 36.01rem) and (max-width: 65.01rem)

  .demo-layout2 [class^="m"]
    background-image url('../../assets/medias/images/demos/ColorfulLeafS1000.jpg')

  .demo-layout2 > :nth-child(5n+2)
    background-image url('../../assets/medias/images/demos/LotusMacroS1000.jpg')

  .demo-layout2 > :nth-child(5n+3)
    background-image url('../../assets/medias/images/demos/GrassLeafS1000.jpg')

  .demo-layout2 > :nth-child(5n+4)
    background-image url('../../assets/medias/images/demos/PacificCityS1000.jpg')

  .demo-layout2 > :nth-child(5n+5)
    background-image url('../../assets/medias/images/demos/OldMechanismS1000.jpg')

@media screen and (min-width: 65.01rem)

  .demo-layout2 [class^="m"]
    background-image url('../../assets/medias/images/demos/ColorfulLeafS2000.jpg')

  .demo-layout2 > :nth-child(5n+2)
    background-image url('../../assets/medias/images/demos/LotusMacroS2000.jpg')

  .demo-layout2 > :nth-child(5n+3)
    background-image url('../../assets/medias/images/demos/GrassLeafS2000.jpg')

  .demo-layout2 > :nth-child(5n+4)
    background-image url('../../assets/medias/images/demos/PacificCityS2000.jpg')

  .demo-layout2 > :nth-child(5n+5)
    background-image url('../../assets/medias/images/demos/OldMechanismS2000.jpg')

.demo-ratio [class^="ratio"]
  background-color #fff

.slideshow .cycle-text *:not(button)
  color #fff
  fill #fff

.slideshow .cycle-text button::before
  content '\EA1A'
  transform rotate(90deg)

