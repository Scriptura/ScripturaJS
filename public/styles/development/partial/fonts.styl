// -----------------------------------------------------------------------------
// @section     Fonts
// @description Polices de caractères
// -----------------------------------------------------------------------------

if $fontName and $fontFile
  @font-face
    font-family $fontName
    src url('../../assets/fonts/' $fontFile '.woff2') format('woff2'),
      url('../../assets/fonts/' $fontFile '.woff') format('woff'),
      url('../../assets/fonts/' $fontFile '.ttf') format('truetype'),
      url('../../assets/fonts/' $fontFile '.svg#' $fontFile '') format('svg')
    font-weight normal
    font-style normal

if $fontName2 and $fontFile2
  @font-face
    font-family $fontName2
    src url('../../assets/fonts/' $fontFile2 '.woff2') format('woff2'),
      url('../../assets/fonts/' $fontFile2 '.woff') format('woff'),
      url('../../assets/fonts/' $fontFile2 '.ttf') format('truetype'),
      url('../../assets/fonts/' $fontFile2 '.svg#' $fontFile2 '') format('svg')
    font-weight normal
    font-style normal

@font-face
  font-family GlyphIcons
  src url('../../assets/fonts/GlyphIcons.woff') format('woff'),
    url('../../assets/fonts/GlyphIcons.ttf') format('truetype'),
    url('../../assets/fonts/GlyphIcons.svg#GlyphIcons') format('svg') // @bugfix @note Pas de .woff2 pour raison de bug sous gulp-iconfont @link https://github.com/nfroidure/gulp-iconfont/issues/64
  font-weight normal
  font-style normal

[class^="icon-"]
  font-family GlyphIcons
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  vertical-align text-top
  -webkit-font-smoothing antialiased // @note Better Font Rendering
  -moz-osx-font-smoothing grayscale

